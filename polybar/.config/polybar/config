# Data
[module/data]
type = internal/date
interval = 1
date = %a, %d-%m-%Y
date-alt = %A, %d de %B de %G%
time = %H:%M
format = <label>
label = %date%

# Calendário
[module/calendario]
type = custom/text
content = 
click-left = dunstify -t 2500 "$(cal | sed -E "s/..(\s)/&\1/g;s/\s(\b$(date +%d)\b)\s?/[\1]/")"

