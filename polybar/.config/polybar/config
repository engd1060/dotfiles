[module/cal]
type = custom/text
content = 
click-left = dunstify -t 3000 "$(cal; echo 'hoje é:' "$(date +%A", "%d)")"
scroll-up = dunstify -t 5000 "$(cal `date --date="1 month" +%m" "%Y`)"
scroll-down = dunstify -t 5000 "$(cal `date --date="-1 month" +%m" "%Y`)"


