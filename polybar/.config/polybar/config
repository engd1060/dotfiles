[module/fs-root]
type = internal/fs
interval = 25

mount-0 = / 
format-mounted-prefix = " "
format-mounted = <label-mounted>
format-unmounted = <label-unmounted>

; Available tokens:
;   %mountpoint%
;   %type%
;   %fsname%
;   %percentage_free%
;   %percentage_used%
;   %total%
;   %free%
;   %used%
label-mounted = %percentage_used%%

; Available tokens:
;   %mountpoint%
; Default: %mountpoint% is not mounted
label-unmounted = 
label-unmounted-foreground = #55

[module/fs-home]
type = internal/fs
interval = 25

mount-0 = /home
format-mounted-prefix = " "
format-mounted = <label-mounted>
format-unmounted = <label-unmounted>

label-mounted = %percentage_used%%

label-unmounted = not mounted
label-unmounted-foreground = #55

[module/fs-win]
