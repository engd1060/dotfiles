# i3
[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
index-sort = true
enable-click = true
enable-scroll = true
wrapping-scroll = true
reverse-scroll = false
fuzzy-match = true

ws-icon-0 = 1; terminal
ws-icon-1 = 2; browser
ws-icon-2 = 3; chats
ws-icon-3 = 4; studio
ws-icon-4 = 5; codes
ws-icon-5 = 6; office
ws-icon-6 = 7; pc
ws-icon-7 = 8; art
ws-icon-8 = 9; games

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-padding = 1
label-mode-background = #e60053

label-focused = %icon%
label-focused-foreground = ${cores.color1}
label-focused-background = ${cores.background}
label-focused-underline = ${cores.color1}
label-focused-padding = 1

label-unfocused = %icon%
label-unfocused-foreground = ${cores.color4}
label-unfocused-underline = ${cores.transparente}
label-unfocused-padding = 1

label-urgent = %icon%
label-urgent-foreground = ${cores.color0}
label-urgent-background = ${cores.color1}
label-urgent-padding = 1

