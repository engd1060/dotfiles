# MENU
#=========================================================================
[module/power-menu]
type = custom/menu

label-open = "陵"
label-open-font = 4
label-close = ""
label-separator = "  "
#label-separator-foreground = ${cores.color1}

; reboot
menu-0-1 = ""
menu-0-1-exec = systemctl reboot
menu-0-1-foreground = ${cores.color1}

; menu power
menu-0-0 = ""
#menu-0-0 = ~/.local/bin/menu-power.sh &
menu-0-0-exec = systemctl poweroff
menu-0-0-foreground = ${cores.color1}

# Lock
menu-0-2 = ""
menu-0-2-exec = ~/.local/bin/i3lock.sh &
menu-0-2-foreground = ${cores.color1}

# Exit
menu-0-3 = "陵"
menu-0-3-exec = sudo pkill X
menu-0-3-foreground = ${cores.color1}



