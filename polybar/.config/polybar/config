# Usuário
[module/usuario]
type = custom/script
interval = 5

format-prefix = " "
format-prefix-foreground = ${cores.azul}
format-underline = ${cores.transparente}
exec = echo $USER@$HOSTNAME
format-foreground = ${cores.azul}

# Placa de vídeo (temperatura)
[module/placadevideo]
type = internal/temperature
interval = 1
hwmon-path = /sys/devices/pci0000:00/0000:00:03.1/0000:26:00.0/hwmon/hwmon2/temp1_input

format = <label>
label = RX480 %temperature-c%
format-foreground = ${cores.azul}

warn-temperature = 65
format-warn = <label-warn>
label-warn = RX480  %temperature-c%
label-warn-foreground = #f00

# Kernel
[module/kernel]
type = custom/script
interval = 10

format-prefix = " "
format-prefix-foreground = ${cores.icones-modulos}
exec = uname -r
tail = false
format-foreground = ${cores.fontes}

# Spotify
