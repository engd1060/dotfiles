 #Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4 
set $alt Mod1 
set $ctrl Control

font pango:monospace 8

# $mod para clicar e mover as janelas flutantes
floating_modifier $mod

# foco segue o mouse?
focus_follows_mouse yes

set $ws1 "1: terminal"
set $ws2 "2: browser"
set $ws3 "3: chats"
set $ws4 "4: studio"
set $ws5 "5: codes"
set $ws6 "6: work"
set $ws7 "7: pc"
set $ws8 "8: art"
set $ws9 "9: games"
set $wsv "v:  video"
#set $ws11 "11:  teste"
#set $ws12 "12:  teste2"



# Application shortcuts
# bindsym [--release] [<Group>+][<Modifiers>+]<keysym> command
# bindcode [--release] [<Group>+][<Modifiers>+]<keycode> command

bindsym F10 exec --no-startup-id $HOME/.local/bin/git-cron.sh
bindsym F11 exec --no-startup-id $HOME/github/dotfiles/install.sh
bindsym $mod+Return exec --no-startup-id termite &
bindsym Print exec --no-startup-id $HOME/.local/bin/screenshot.sh

