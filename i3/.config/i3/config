# testando mais de 10 WS
set $mode_workspace "goto_ws"
mode $mode_workspace {
    bindsym 1 workspace 1; mode "default"
    bindsym 2 workspace 2; mode "default"
    bindsym 3 workspace 3; mode "default"
    bindsym 4 workspace 4; mode "default"
    bindsym 5 workspace 5; mode "default"
    bindsym 6 workspace 6; mode "default"
    bindsym 7 workspace 7; mode "default"
    bindsym 8 workspace 8; mode "default"
    bindsym 9 workspace 9; mode "default"
    bindsym v workspace v; mode "default"
    # […]
    bindsym Escape mode "default"
    bindsym w mode "default"
}
bindsym $mod+w mode $mode_workspace

set $mode_move_to_workspace "moveto_ws"
mode $mode_move_to_workspace {
    bindsym 1 move window to workspace 1; mode "default"
    bindsym 2 move window to workspace 2; mode "default"
    bindsym 3 move window to workspace 3; mode "default"
    bindsym 4 move window to workspace 4; mode "default"
    bindsym 5 move window to workspace 5; mode "default"
    bindsym 6 move window to workspace 6; mode "default"
    bindsym 7 move window to workspace 7; mode "default"
    bindsym 8 move window to workspace 8; mode "default"
    bindsym 9 move window to workspace 9; mode "default"
    bindsym v move window to workspace v; mode "default"
    #bindsym 11 move container to workspace 11; mode "default"
    #bindsym 12 move container to workspace 12; mode "default"
    #[…]
    bindsym Escape mode "default"
    bindsym w mode "default"
}
bindsym $mod+shift+w mode $mode_move_to_workspace




# Next workspaces
bindsym $mod+Tab workspace next

# Restart i3
bindsym $mod+Shift+r restart

# Gaps
gaps inner 15
gaps outer 5

#hide_edge_borders smart

#smart_borders enable

new_window none
for_window [class="^.*"] border pixel 1

mode "resize" {
        bindsym j resize shrink width 5 px or 5 ppt
        bindsym k resize grow height 5 px or 5 ppt
        bindsym l resize shrink height 5 px or 5 ppt
        bindsym semicolon resize grow width 5 px or 5 ppt

        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"



# Regras de Janelas
# sudo xprop | grep -i 'class' # para descobrir a class
for_window [class="TelegramDesktop"] move to workspace 3, floating enable, resize set 1000 px 810 px
for_window [class="code-oss"] move to workspace 5
for_window [class="Spotify|vlc"] move to workspace 4
for_window [class="Firefox"] move to workspace 2
for_window [class="QGIS3|Freecad"] move to workspace 8
for_window [class="okular"] move to workspace 6
for_window [class="Steam"] move to workspace 9
for_window [class="vlc"] move to workspace v

